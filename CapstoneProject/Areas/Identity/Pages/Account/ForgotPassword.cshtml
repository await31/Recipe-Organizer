@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<hr />

<section>
    <div class="container">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="card text-black border-0 color-change" style="border-radius: 25px;">
                <div class="card-body p-md-5">
                    <div class="row justify-content-center">
                        <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1 mb-4">
                            <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4 text-color-change">@ViewData["Title"]</p>
                            <div asp-validation-summary="ModelOnly" class="text-danger text-color-change-red"></div>
                            <form method="post" class="text-color-change">
                                <p class="text-color-change">Enter your email.</p>

                                <div class="d-flex flex-row align-items-center mb-4">
                                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                    <div class="form-outline flex-fill mb-0">
                                        <input asp-for="Input.Email" class="form-control" placeholder="Email" autocomplete="username" aria-required="true" />
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div>
                                    <button type="submit" class="w-100 btn btn-lg btn-primary">Reset Password</button>
                                </div>
                            </form>
                        </div>
                        <div class="col-md-10 col-lg-6 col-xl-7 d-flex flex-row align-items-center order-1 order-lg-2 ">
                            <img src="/images/chef-confuse.jpg"
                                 style="height: 100%;" class="img-fluid rounded-5 ms-auto" alt="Sample image">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
