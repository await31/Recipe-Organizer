<body class="dark">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <!-- Container wrapper -->
        <div class="container-fluid">
            <!-- Navbar brand -->
            <a class="navbar-brand mt-2 mt-lg-0" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="\images\logo.png"
                     height="80"
                     alt="Cookez Logo"
                     loading="lazy" />
            </a>

            <!-- Toggle button -->
            <button class="navbar-toggler"
                    type="button"
                    data-mdb-toggle="collapse"
                    data-mdb-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                <i class="fas fa-bars"></i>
            </button>

            <!-- Collapsible wrapper -->
            <div class="collapse navbar-collapse container-fluid justify-content-between text-center" id="navbarSupportedContent">
                <!-- Search -->
                <form class="d-flex form-outline pb-2" asp-controller="UserRecipes" asp-action="Filter">
                    <input type="search"
                           class="form-control rounded border"
                           id="SearchString"
                           name="SearchString"
                           placeholder="What do you want to eat today?"
                           aria-label="Search"
                           aria-describedby="search-addon" value="@ViewData["FilterSearch"]" />
                    <button class="btn btn-dark ms-2 rounded" type="submit" value="Find"><i class="fa-solid fa-magnifying-glass"></i></button>
                </form>

                <div class="d-flex justify-content-between">
                    <div class="load-flash"></div>
                    <div class="mode-toggle noselect">
                        <h6 class="label-dark m-0">Dark</h6>
                        <div class="toggle-switch"></div>
                        <h6 class="label-light m-0">Light</h6>
                    </div>

                    <div class="d-flex">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </div>
        <!-- Container wrapper -->
    </nav>
    <div class="container min-vh-100">
        <main role="main" class="h-100">
            <partial name="_Notification" />
            <breadcrumb class="mt-5"></breadcrumb>
            @RenderBody()
        </main>
    </div>
    <!-- Footer -->
    <div class="container-fluid shadow-sm">
        <footer class="d-flex flex-wrap justify-content-between align-items-center pt-3 pb-2 my-1 border-top">
            <p class="col-4 mb-0 ps-2 text-color-change">&copy; 2023 Cookez, Inc</p>

            <a href="/" class="col-4 text-center">
                <img class="img-fluid" style="width: 60px; height: 60px;" src="~/images/logo.png" />
            </a>

            <ul class="nav col-4 justify-content-end text-color-change pe-5">
                <li class="nav-item"><a asp-action="Privacy" asp-controller="Home" class="nav-dark px-2 text-color-change" target="_blank">Privacy</a></li>
                <li class="nav-item"><a asp-action="Contact" asp-controller="Home" class="nav-dark px-2 text-color-change" target="_blank">Contact us</a></li>
            </ul>
        </footer>
    </div>
    <!-- Footer -->
    <script src="~/lib/jquery-3.7.0.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.13.2/jquery-ui.min.js"></script>
    <script src="~/js/togglescript.js"></script>
    <script>
        $(function () {
            $("#SearchString").autocomplete({
                source: function (request, response) {
                    $.ajax({
                        url: "/UserRecipes/AutoComplete",
                        type: "POST",
                        data: { term: request.term },
                        success: function (data) {
                            response($.map(data, function (item) {
                                return item.name;
                            }));
                        },
                        error: function (xhr, status, error) {
                            alert("Error");
                        },
                        failure: function (response) {
                            alert("Error");
                        }
                    });
                },
                select: function (e, i) {
                    $("#SearchString").val(i.item.val);
                },
                minLength: 1
            })
        });
    </script>
</body>
</html>
