@model BusinessObjects.Models.RecipeCategory
@{
    ViewBag.Title = "Create recipe category";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary text-color-change">Create Category</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-controller="RecipeCategory" asp-action="Index" class="btn btn-warning">Back to list</a>
    </div>
</form>
