@model Ingredient

<form method="post" enctype="multipart/form-data">
    <div class="p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-success">Create Ingredient</h2>
            <hr />
        </div>
        <div class="mb-3">
            @Model.Name
        </div>
        <div class="mb-3">
            <img src="@Model.ImgPath" style="width: 100px; height: 100px;">
        </div>
        <div class="mb-3">
            @Model.Description
        </div>
        <div class="form-group">
            @Model.FkCategory
        </div>
        <a asp-controller="Dashboard" asp-action="Index" class="btn btn-warning mt-3" style="width: 10%;">Back to dashboard</a>
    </div>
</form>