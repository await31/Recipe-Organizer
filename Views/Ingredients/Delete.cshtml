@model Ingredient
@{
    ViewBag.Title = "Delete ingredient";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-danger">Are you sure you want to delete this item?</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" disabled/>
        </div>
        <div class="mb-3">
            <label asp-for="ImgPath"></label>
            <input asp-for="ImgPath" class="form-control" disabled/>
        </div>
        <div class="mb-3">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" disabled/>
        </div>
        <button type="submit" class="btn btn-danger" style="width: 10%;">Delete</button>
        <a asp-controller="Ingredients" asp-action="Index" class="btn btn-warning" style="width: 10%;">Back to list</a>
    </div>
</form>
