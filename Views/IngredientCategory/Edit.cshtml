@model IngredientCategory
@{
    ViewBag.Title = "Edit ingredient category";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Category</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width: 10%;">Update</button>
        <a asp-controller="IngredientCategory" asp-action="Index" class="btn btn-warning" style="width: 10%;">Back to list</a>
    </div>
</form>
