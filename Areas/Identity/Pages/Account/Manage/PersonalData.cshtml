@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-6">
        <p>Your account contains personal data that you have given us. You can download or delete this data.</p>
        <div>
            <form asp-page="DownloadPersonalData" method="post" class="form-group">
                <button class="btn btn-dark btn-lg flex-end rounded-2 mx-2" type="submit"><i class="fa fa-download" aria-hidden="true"></i>Download</button>
            </form>
            <div>
                <a asp-page="DeletePersonalData" class="btn btn-danger btn-lg flex-end rounded-2 mx-2"><i class="fa fa-trash" aria-hidden="true"></i>Delete</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}