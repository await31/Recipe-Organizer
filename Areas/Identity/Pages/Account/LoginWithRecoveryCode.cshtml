@page
@model LoginWithRecoveryCodeModel
@{
    ViewData["Title"] = "Recovery code verification";
}

<section style="height: 75vh !important;">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-6 col-xl-11">
                <div class="card text-black border-0 color-change" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1 mb-4">
                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">@ViewData["Title"]</p>

                                
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <form method="post">
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="Input.RecoveryCode" class="form-control" autocomplete="off" placeholder="Recovery code" />
                                            <span asp-validation-for="Input.RecoveryCode" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div>
                                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-info text-light">Log in</button>
                                    </div>
                                    <hr />
                                    <p>
                                        <i class="fa fa-exclamation-triangle fa-2x" style="" aria-hidden="true"></i>

                                        This login will not be remembered until you provide
                                        an authenticator app code at log in or disable 2FA and log in again.
                                    </p>
                                </form>

                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex flex-row align-items-center order-1 order-lg-2">
                                <img src="/images/chef-glance.jpg"
                                    style="height: 90%;" class="img-fluid rounded-5 ms-auto" alt="Sample image">
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-md-offset-2">
                <section>
                </section>
            </div>
        </div>
    </div>
</section>
 
 @section Scripts {
    <partial name="_ValidationScriptsPartial" />
}